<?php get_header(); ?>
<!-- Include Elementor Header Template -->
<?php echo do_shortcode('[elementor-template id="5377"]'); ?>
<div class="portfolio-archive-wrapper">
    <!-- Filter Section -->
    <div class="filter-section">
        <span class="filter-label">Filter</span>
        <div class="portfolio-filters">
            <?php echo do_shortcode('[facetwp facet="project_type"]'); ?>
            <?php echo do_shortcode('[facetwp facet="market_sectors"]'); ?>
            <?php echo do_shortcode('[facetwp facet="services"]'); ?>
            <?php echo do_shortcode('[facetwp facet="reset"]'); ?>
        </div>
    </div>
    
    <!-- Portfolio Grid -->
    <div class="facetwp-template">
        <div class="portfolio-masonry">
            <?php
            if (have_posts()) :
                $item_count = 0;
                while (have_posts()) : the_post();
                $item_count++;
                
                // Get ACF hero image
                $hero_image = get_field('hero_image');
                $image_url = '';
                
                if ($hero_image) {
                    $image_url = $hero_image['url'];
                } elseif (has_post_thumbnail()) {
                    $image_url = get_the_post_thumbnail_url(get_the_ID(), 'large');
                }
                
                // Create different heights for masonry effect
                $height_class = '';
                if ($item_count % 7 == 1) {
                    $height_class = 'tall-item';
                } elseif ($item_count % 4 == 0) {
                    $height_class = 'medium-item';
                } else {
                    $height_class = 'short-item';
                }
            ?>
                <div class="portfolio-item <?php echo $height_class; ?>">
                    <a href="<?php the_permalink(); ?>">
                        <?php if ($image_url) : ?>
                            <div class="portfolio-image">
                                <img src="<?php echo esc_url($image_url); ?>" alt="<?php the_title(); ?>">
                                <div class="portfolio-overlay">
                                    <h3><?php the_title(); ?></h3>
                                </div>
                            </div>
                        <?php endif; ?>
                    </a>
                </div>
            <?php
                endwhile;
            else :
                echo '<p>No portfolio items found.</p>';
            endif;
            ?>
        </div>
        
        <?php
        // Only show Load More if there are more posts
        global $wp_query;
        if ($wp_query->max_num_pages > 1) :
        ?>
        <!-- Load More Button -->
        <div class="load-more-section">
            <button class="load-more-btn">LOAD MORE</button>
        </div>
        <?php endif; ?>
    </div>
</div>

<style>
